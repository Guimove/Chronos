{% extends "ChronosChronoAdminBundle::layout.html.twig" %}

{% block content_title %}Circuit List{% endblock %}

{% block home_title %}Circuit List{% endblock %}

{% block sub_content %}

<a href="{{ path('circuit_new') }}" class="btn">
    <i class="icon-plus"></i>
    Create a new entry
</a>

<hr>
{% if entities is not empty %}
<table class="records_list table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Length</th>
        <th>Country</th>
        <th>Membre de l'asso?</th>
        <th>Picture</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
    <tr>
        <td><a href="{{ path('circuit_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.name }}</td>
        <td>{{ entity.length }}</td>
        <td>{{ entity.country }}</td>
        <td>
            {% if entity.asso %}
            Oui
            {% else %}
            Non
            {% endif %}
        </td>
        <td><img src="{{ asset(entity.path) }}" width="150px" /></td>
        <td>
            <a rel="tooltip" title="Show entry" href="{{ path('circuit_show', { 'id': entity.id }) }}"><i class="icon-search"></i></a>
            <a rel="tooltip" title="Edit entry" href="{{ path('circuit_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i></a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% include "ChronosChronoAdminBundle::pagination.html.twig" %}
{%else%}
<h2>Oops, their is nothing here ! Please add some circuits.</h2>
{%endif%}
{% endblock %}
