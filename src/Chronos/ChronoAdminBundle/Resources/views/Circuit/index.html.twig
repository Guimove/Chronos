{% extends "ChronosChronoAdminBundle::layout.html.twig" %}

{% block content_title %}Circuit list{% endblock %}

{% block sub_content %}

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Length</th>
            <th>Country</th>
            <th>Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('circuit_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.length }}</td>
            <td>{{ entity.country }}</td>
            <td><img src="/symfony/web/uploads/images/{{ entity.id }}.{{ entity.path }}" width="150px"/></td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('circuit_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('circuit_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('circuit_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}