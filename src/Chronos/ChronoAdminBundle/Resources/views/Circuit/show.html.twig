{% extends "ChronosChronoAdminBundle::layout.html.twig" %}

{% block content_title %}Circuit {% endblock %}

{% block home_title %}Circuit {% endblock %}

{% block sub_content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Length</th>
            <td>{{ entity.length }}</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>{{ entity.country }}</td>
        </tr>
        <tr>
            <th>Picture</th>
            <td><img src="{{ asset(entity.path) }}" width="150px"/></td>
        </tr>
    </tbody>
</table>

<div class="record_actions form-actions">
        <a href="{{ path('circuit_index') }}" class="btn">
            <i class="icon-list"></i>
            Back to the list
        </a>
        <a href="{{ path('circuit_edit', { 'id': entity.id }) }}" class="btn">
            <i class="icon-pencil"></i>
            Edit
        </a>

        <form action="{{ path('circuit_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger"><i class="icon-fire icon-white"></i>
                Delete
            </button>
        </form>
</div>
{% endblock %}