{% extends "ChronosChronoAdminBundle::layout.html.twig" %}

{% block content_title %}Weather List{% endblock %}

{% block home_title %}Weather List{% endblock %}

{% block sub_content %}

<a href="{{ path('weather_new') }}" class="btn">
    <i class="icon-plus"></i>
    Create a new entry
</a>
<hr>
{% if entities is not empty %}
<table class="records_list table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
    <tr>
        <td><a href="{{ path('weather_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.name }}</td>
        <td>
            <a rel="tooltip" title="Show entry" href="{{ path('weather_show', { 'id': entity.id }) }}"><i class="icon-search"></i></a>
            <a rel="tooltip" title="Edit entry" href="{{ path('weather_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i></a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{%else%}
<h2>Oops, their is nothing here ! Please add some weather.</h2>
{%endif%}
{% endblock %}
