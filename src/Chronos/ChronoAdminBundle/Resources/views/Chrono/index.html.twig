{% extends "ChronosChronoAdminBundle::layout.html.twig" %}

{% block content_title %}Chrono list{% endblock %}

{% block sub_content %}

<table class="records_list">
    <thead>
    <tr>
        <th>Id</th>
        <th>Time</th>
        <th>Bike</th>
        <th>Comment</th>
        <th>Date</th>
        <th>User</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
    <tr>
        <td><a href="{{ path('chrono_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.time }}</td>
        <td>{{ entity.bike }}</td>
        <td>{{ entity.comment }}</td>
        <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif%}</td>
        <td>{{ entity.user }}</td>
        <td>
            <ul>
                <li>
                    <a href="{{ path('chrono_show', { 'id': entity.id }) }}">show</a>
                </li>
                <li>
                    <a href="{{ path('chrono_edit', { 'id': entity.id }) }}">edit</a>
                </li>
            </ul>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('chrono_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
