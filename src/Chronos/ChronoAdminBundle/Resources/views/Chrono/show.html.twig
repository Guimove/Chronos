{% extends "ChronosChronoAdminBundle::layout.html.twig" %}

{% block content_title %}Chrono {% endblock %}

{% block sub_content %}

<table class="record_properties">
    <tbody>
    <tr>
        <th>Id</th>
        <td>{{ entity.id }}</td>
    </tr>
    <tr>
        <th>Time</th>
        <td>{{ entity.time }}</td>
    </tr>
    <tr>
        <th>Bike</th>
        <td>{{ entity.bike }}</td>
    </tr>
    <tr>
        <th>Comment</th>
        <td>{{ entity.comment }}</td>
    </tr>
    <tr>
        <th>Date</th>
        <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
    </tr>
    <tr>
        <th>User</th>
        <td>{{ entity.user }}</td>
    </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('chrono_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('chrono_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('chrono_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}