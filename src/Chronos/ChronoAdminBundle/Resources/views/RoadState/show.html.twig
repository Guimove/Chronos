{% extends "ChronosChronoAdminBundle::layout.html.twig" %}

{% block content_title %}RoadState {% endblock %}

{% block home_title %}RoadState {% endblock %}

{% block sub_content %}

<table class="record_properties">
    <tbody>
    <tr>
        <th>Id</th>
        <td>{{ entity.id }}</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>{{ entity.name }}</td>
    </tr>
    </tbody>
</table>

<div class="record_actions form-actions">
    <a href="{{ path('roadstate') }}" class="btn">
        <i class="icon-list"></i>
        Back to the list
    </a>
    <a href="{{ path('roadstate_edit', { 'id': entity.id }) }}" class="btn">
        <i class="icon-pencil"></i>
        Edit
    </a>
    {% include "ChronosChronoAdminBundle:Widgets:roadStateDel.html.twig" %}
    <a class="btn btn-danger" href="#delModal" data-toggle="modal">
        <i class="icon-fire icon-white"></i>
        Delete
    </a>
</div>
{% endblock %}