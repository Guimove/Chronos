{% extends "ChronosChronoUserBundle::layout.html.twig" %}

{% block content_title %}Chrono {% endblock %}

{% block home_title %}Chrono{% endblock %}

{% block sub_content %}

<table class="record_properties">
    <tbody>
    <tr>
        <th>Id</th>
        <td>{{ entity.id }}</td>
    </tr>
    <tr>
        <th>Circuit</th>
        <td>{{ entity.circuit }}</td>
    </tr>
    <tr>
        <th>Weather</th>
        <td>{{ entity.weather }}</td>
    </tr>
    <tr>
        <th>Time</th>
        <td>{{ entity.time }}</td>
    </tr>
    <tr>
        <th>Bike</th>
        <td>{{ entity.bike }}</td>
    </tr>
    <tr>
        <th>Comment</th>
        <td>{{ entity.comment }}</td>
    </tr>
    <tr>
        <th>Date</th>
        <td>{{ entity.date|date('d/m/Y') }}</td>
    </tr>
    <tr>
        <th>User</th>
        <td>{{ entity.user }}</td>
    </tr>
    </tbody>
</table>

<div class="record_actions form-actions">
    <a href="{{ path('usr_chrono') }}" class="btn">
        <i class="icon-list"></i>
        Back to the list
    </a>
</div>
{% endblock %}